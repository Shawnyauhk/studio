rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allows signed-in users to read from the collection,
    // as the front-end query will filter by their specific userId.
    // Write permissions remain strict to the document owner.
    match /businessCards/{cardId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allows a user to read, create, and update their own digital card document,
    // where the document ID matches their user ID.
    match /digitalCards/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
