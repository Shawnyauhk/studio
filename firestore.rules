
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Digital Cards: Users can only read/write their own card, identified by their UID.
    match /digitalCards/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Business Cards:
    // READ: Any authenticated user can query the collection.
    // The client-side query (where('userId', '==', user.uid)) ensures they only get their own documents.
    // WRITE: Users can only create, update, or delete documents that have their own userId.
    match /businessCards/{cardId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
