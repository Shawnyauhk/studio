
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write their own business cards.
    // The wildcard {cardId} matches any document in the businessCards collection.
    match /businessCards/{cardId} {
      // A user can create a card if the card's userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // A user can read, update, or delete a card if the existing card's userId matches their own uid.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow users to read and write their own digital card.
    // The document ID must match the user's uid.
    match /digitalCards/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
