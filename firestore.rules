rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Business Cards: Allow users to manage their own cards.
    match /businessCards/{cardId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Digital Cards: Allow users to manage their own digital card.
    match /digitalCards/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
