rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Business card images: a user can only read/write their own cards.
    match /businessCards/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // User avatars: a user can only read/write their own avatar.
    match /avatars/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
